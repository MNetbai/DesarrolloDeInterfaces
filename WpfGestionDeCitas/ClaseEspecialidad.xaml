        </Button>
        <Button Content="MODIFICAR ESPECIALIDAD" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Height="37" Width="199" Foreground="White" FontFamily="Segoe UI Variable Small Semibold" FontWeight="Bold" Click="ModificarEspecialidad_Click" FontSize="14" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0D7276" Offset="0.854"/>
                    <GradientStop Color="#FFB8F3F3" Offset="0"/>
                </LinearGradientBrush>
