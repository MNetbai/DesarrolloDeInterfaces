        mc:Ignorable="d"
        Title="Paciente" Height="461" Width="255">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/PROGRAMACIÓN.png"/>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="261" Margin="98,-50,0,0" VerticalAlignment="Top" Width="261" Source="/PROGRAMACIÓN (1)-PhotoRoom.png-PhotoRoom.png"/>
